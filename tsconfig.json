{
  "compilerOptions": {
    "target": "ES2022", // ~node10
    "module": "commonjs",
    "lib": [ ],
    "sourceMap": true,
    "incremental": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noEmitOnError": true,
    "noImplicitThis": true,
    "removeComments": true
  },
  "include": [
    "src/**/*"
  ]
}
