{
  "name": "homebridge-foxess",
  "displayName": "Homebridge FoxESS",
  "version": "1.0.11",
  "description": "Basic utility accessories for displaying solar FoxESS solar information in Homebridge: https://github.com/nfarina/homebridge",
  "license": "MIT",
  "keywords": [
    "homebridge-plugin",
    "foxess",
    "energizer",
    "solar",
    "energizer-solar",
    "homebridge"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/teh-hippo/homebridge-foxess.git"
  },
  "bugs": {
    "url": "http://github.com/teh-hippo/homebridge-foxess/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/teh-hippo"
  },
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0",
    "homebridge": ">=1.7.0"
  },
  "scripts": {
    "forceClean": "rimraf ./dist",
    "build": "tsc",
    "pretest": "npm run build",
    "test": "jest tests",
    "lint": "eslint --max-warnings=0 src/**/*.ts",
    "debug": "npm run build && homebridge -I -D -P .",
    "prepublishOnly": "npm run lint && npm test"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "homebridge": "^1.7.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^7.0.1"
  },
  "dependencies": {
    "ts-md5": "^1.3.1"
  }
}
